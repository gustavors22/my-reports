generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  email     String       @unique
  phone     String?
  password  String
  authToken String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  posts     Itegration[]
}

model PlatformsForIntegration {
  id           String       @id @default(cuid())
  name         String
  url          String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  integrations Itegration[]
}

model Itegration {
  id                      String                  @id @default(cuid())
  userId                  String
  platformId              String
  createdAt               DateTime                @default(now())
  updatedAt               DateTime                @updatedAt
  platformsForIntegration PlatformsForIntegration @relation(fields: [platformId], references: [id])
  user                    User                    @relation(fields: [userId], references: [id])
}
